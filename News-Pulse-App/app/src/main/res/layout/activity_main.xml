<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_image"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:fontFamily="@font/merriweather"
            android:gravity="center"
            android:padding="15dp"
            android:text="News Pulse"
            android:textColor="#543986"
            android:textSize="45sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/google"
            android:layout_below="@id/text1"
            android:layout_marginHorizontal="45dp"
            android:fontFamily="@font/merriweather"
            android:gravity="center"
            android:padding="15dp"
            android:text="See what's happening in the world right now."
            android:textColor="#695295"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/text3"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="@font/merriweather"
            android:text="Continue with Google"
            android:textColor="#543986"
            android:textStyle="bold"
            app:cornerRadius="5dp"
            app:icon="@drawable/google"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="28dp"
            app:iconTint="@null"
            app:strokeColor="#543986"
            app:strokeWidth="2dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/loginActivity"
            android:layout_marginVertical="3dp"
            android:fontFamily="@font/merriweather"
            android:gravity="center"
            android:text="or"
            android:textColor="#543986"
            android:textSize="12sp"
            tools:ignore="HardcodedText,SmallSp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/layout1"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#543986"
            android:fontFamily="@font/merriweather"
            android:text="Continue with email"
            android:textColor="@color/white"
            app:cornerRadius="5dp"
            app:icon="@drawable/mail"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="28dp"
            app:iconTint="@null"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merriweather"
                android:text="Don't have an account?"
                android:textColor="#543986"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/createAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/text4"
                android:fontFamily="@font/merriweather"
                android:text=" Sign Up."
                android:textColor="#543986"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>